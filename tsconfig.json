{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [ "ESNext" ],

    "outDir": "dist/",
    "declaration": true,

    "strict": true,
    "noImplicitAny": false,

    "types": [
      "mocha",
      "node",
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "lib/**/*",
  ]
}
