{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],

    "outDir": "dist/",

    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,

    "typeRoots": [
      "node_modules/@types/*",
      "node_modules/*",
      "typings/index.d.ts"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "lib/**/*",
  ]
}